    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:context=".ui.learning.LearningFragment">

    <!--            android:layout_height="match_parent"-->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="550dp"


            android:rowCount="3"
            android:columnCount="2">

            <androidx.cardview.widget.CardView

                app:cardBackgroundColor="@color/card_js_red"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="8dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="10dp">

                <TextView
                    android:id="@+id/textViewJs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="sans-serif"
                    android:text="@string/card_js"

                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/textViewJsDesc"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="68dp"
                    android:fontFamily="sans-serif"
                    android:text="@string/card_js_desc"

                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/imageViewJs"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="280dp"
                   android:layout_marginTop="40dp"
                    android:src="@drawable/js_icon" />


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                app:cardBackgroundColor="@color/card_ches_brown"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_gravity="fill"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="10dp"
                >
                <TextView
                    android:id="@+id/textViewChem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="sans-serif"
                    android:text="@string/card_chemistry"

                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/textViewChemDesc"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="68dp"
                    android:fontFamily="sans-serif"
                    android:text="@string/card_chemistry_desc"

                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/imageViewChem"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="280dp"
                    android:layout_marginTop="40dp"
                    android:src="@drawable/js_icon" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                app:cardBackgroundColor="@color/card_acct_green"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_gravity="fill"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="10dp"
                >
                <TextView
                    android:id="@+id/textViewAcct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="sans-serif"
                    android:text="@string/card_acct"

                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/textViewAcctDesc"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="68dp"
                    android:fontFamily="sans-serif"
                    android:text="@string/card_acct_desc"

                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/imageViewAcct"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="280dp"
                    android:layout_marginTop="40dp"
                    android:src="@drawable/js_icon" />
            </androidx.cardview.widget.CardView>

        </GridLayout>
    </RelativeLayout>

