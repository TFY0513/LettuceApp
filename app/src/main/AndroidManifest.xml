<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.lettuceapp">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application

        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"

        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LettuceApp"
        tools:targetApi="31">
        <activity
            android:name=".ui.assessment.AssessmentAnsweringActivity"
            android:exported="false"
            android:label="@string/assessment_label"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".ui.article.ArticleWebView"
            android:exported="false"
            android:label="@string/title_activity_article_web_view"
            android:parentActivityName=".MainActivity" /> <!-- <activity -->
        <!-- android:name=".ui.learning.LearningMaterial" -->
        <!-- android:exported="false" /> -->
        <!-- <intent-filter> -->
        <!-- <action android:name=".LaunchSplashActivity" /> -->
        <!-- <category android:name="android.intent.category.LAUNCHER" /> -->
        <!-- </intent-filter> -->
        <activity
            android:name=".ui.registerlogin.RegisterActivity"
            android:exported="true"
            android:theme="@style/Theme.LettuceApp.NoActionBar">
        </activity>
        <activity
            android:name=".LaunchSplashActivity"
            android:exported="true"
            android:theme="@style/Theme.LettuceApp.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.LettuceApp.NoActionBar"></activity>
    </application>

</manifest>